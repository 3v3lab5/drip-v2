doctype html
html
  head
    title DRIPO
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='/stylesheets/bootstrap.min.css', rel='stylesheet', media='screen')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
        .row.wrap
           include leftbar
           .col-sm-7.middlebar
               label Add Patient       
                 form.add-patient(role='form', action="/addpatient", method="post")          
                   label(for='pname') Name              
                    input#pname(name='pname' type='text', placeholder='Patient Name')                             
                   br
                   label(for='pwt') Weight              
                    input#pwt(type='text', name='pwt' , placeholder='Weight in Kg')   
                   br          
                   label Bed
                   select(name='bid')
                     each bed_in, i in beds
                       option(value='#{bed_in.id}') #{bed_in.bid}
                    br

                   div.actions
                    input(type="submit", value="add")
           include rightbar
  script(src='/js/jquery.min.js')
  script(src='/js/bootstrap.min.js')
  
